<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="banner_head">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#FCFCFD</item>
        <item name="fontFamily">@font/source_sans_pro_bold</item>

        <item name="android:textAlignment">viewStart</item>
        <item name="flow_verticalAlign">top</item>
        <item name="android:layout_weight">700</item>
    </style>
    <style name="dealsTitle">
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/source_sans_pro_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#181A25</item>
    </style>

    <style name="home_tab_style">
        <item name="fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textSize">@dimen/_15ssp</item>

    </style>

    <style name="custom_indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:width">68dp</item>
        <item name="android:height">48dp</item>
        <item name="android:radius">100dp</item>
        <item name="android:color">#FF4760</item>
    </style>
    
    <style name="searchStyle">
        <item name="android:background">@drawable/search_radius</item>
    </style>

    <style name="search_screen_text_style">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">top</item>
        <item name="android:fontFamily">@font/source_sans_pro_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#292C3D</item>

    </style>

    <style name="image_radio">
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="bookmark_radio">
        <item name="cornerRadius">200dp</item>
    </style>

    <style name="page_title_style">
       <item name="fontFamily">@font/source_sans_pro_bold</item>
       <item name="android:gravity">top</item>
        <item name="android:textSize">@dimen/_30ssp</item>
        <item name="android:textColor">#292C3D</item>

    </style>

    <style name="fab_style" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:shape">oval</item>
        <item name="backgroundTint">#FF4760</item>
        <item name="srcCompat">@drawable/add_fab</item>
        <item name="fabSize">normal</item>

        <item name="tint">@color/white</item>

    </style>

    <style name="chip_style" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:textColor">#0048F0</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="closeIconVisible">false</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipCornerRadius">@dimen/_50sdp</item>
        <item name="fontFamily">@font/source_sans_pro_semibold</item>
        <item name="chipStrokeColor">#E0E2EB</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipMinHeight">40dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="category_style">
        <item name="android:textColor">#0048F0</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="fontFamily">@font/source_sans_pro_bold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="article_style">
        <item name="android:textColor">#181A25</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:gravity">top|left</item>
    </style>
    
    <style name="alpha_hide_style">
        <item name="android:textColor">#FCFCFD</item>
        <item name="fontFamily">@font/source_sans_pro_bold</item>
    </style>
    <style name="alpha_body_style">
        <item name="android:textColor">#FCFCFD</item>
        <item name="fontFamily">@font/source_sans_pro</item>
    </style>
</resources>